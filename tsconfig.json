{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "rootDir": "src",
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "inlineSources": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noEmitHelpers": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "sourceRoot": "/",
    "strict": false,
    "strictNullChecks": true,
    "target": "es2019"
  },
  "files": ["src/index.ts"],
  "exclude": ["node_modules"],
  "typeRoots": ["node_modules/@types"]
}
